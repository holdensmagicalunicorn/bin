#Example:
# pathmunge bin # Adds bin to your PATH variable unless it is already there

if ! echo $PATH | /bin/egrep -q "(^|:)$1($|:)" ; then
   if [ "$2" = "after" ] ; then
      PATH=$PATH:$1
   else
      PATH=$1:$PATH
   fi
fi

# TESTING
# pathmunge "file with spaces" && pathmunge "file with spaces" && echo $PATH
